@page "/teams"
@using ScrumOps.Web.Components.TeamManagement
@rendermode InteractiveServer

<PageTitle>Teams - ScrumOps</PageTitle>

<div class="container-fluid">
    <ul class="nav nav-tabs mb-3" id="teamsTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link @(activeTab == "dashboard" ? "active" : "")" 
                    @onclick='@(() => SetActiveTab("dashboard"))' 
                    @onclick:preventDefault="true">
                <i class="bi bi-speedometer2"></i> Dashboard
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link @(activeTab == "list" ? "active" : "")" 
                    @onclick='@(() => SetActiveTab("list"))' 
                    @onclick:preventDefault="true">
                <i class="bi bi-list-ul"></i> Team List
            </button>
        </li>
    </ul>

    <div class="tab-content">
        @if (activeTab == "dashboard")
        {
            <div class="tab-pane fade show active">
                <TeamDashboardComponent />
            </div>
        }
        else if (activeTab == "list")
        {
            <div class="tab-pane fade show active">
                <TeamListComponent />
            </div>
        }
    </div>
</div>

@code {
    private string activeTab = "dashboard";

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }
}