@using ScrumOps.Shared.Contracts.Teams
@using ScrumOps.Shared.Contracts.Sprints
@using ScrumOps.Web.Services
@inject ITeamService TeamService
@inject ISprintService SprintService
@inject INotificationService NotificationService
@inject NavigationManager Navigation
@inject ILogger<TeamDashboardComponent> Logger
@rendermode InteractiveServer

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Team Management Dashboard</h2>
            <p class="text-muted">Overview of all teams and their performance metrics</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" @onclick="NavigateToCreateTeam" @onclick:preventDefault="true">
                <i class="bi bi-plus-circle"></i> Create New Team
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (teams?.Any() == true)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title mb-0">Total Teams</h6>
                                <h2 class="mb-0">@teams.Count()</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-people-fill fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title mb-0">Active Teams</h6>
                                <h2 class="mb-0">@teams.Count(t => t.IsActive)</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-check-circle-fill fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title mb-0">Total Members</h6>
                                <h2 class="mb-0">@teams.Sum(t => t.MemberCount)</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-person-fill fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title mb-0">Avg Velocity</h6>
                                <h2 class="mb-0">@(teams.Any() ? teams.Average(t => t.Velocity).ToString("F1") : "0.0")</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-speedometer2 fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Teams Table -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Team Performance Overview</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Team Name</th>
                                <th>Members</th>
                                <th>Sprint Length</th>
                                <th>Velocity</th>
                                <th>Status</th>
                                <th>Current Sprint</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in teams.OrderByDescending(t => t.IsActive).ThenBy(t => t.Name))
                            {
                                <tr class="@(team.IsActive ? "" : "table-secondary")">
                                    <td>
                                        <div>
                                            <strong>@team.Name</strong>
                                            @if (!string.IsNullOrEmpty(team.Description))
                                            {
                                                <br />
                                                <small class="text-muted">@team.Description</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-people"></i> @team.MemberCount
                                        </span>
                                    </td>
                                    <td>@team.SprintLengthWeeks weeks</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="me-2">@team.Velocity.ToString("F1")</span>
                                            @if (team.Velocity > 0)
                                            {
                                                <div class="progress" style="width: 50px; height: 8px;">
                                                    <div class="progress-bar bg-@GetVelocityColor(team.Velocity)" 
                                                         style="width: @Math.Min(team.Velocity * 10, 100)%"></div>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @(team.IsActive ? "bg-success" : "bg-secondary")">
                                            @(team.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var teamSprintInfo = GetTeamSprintInfo(team.Id);
                                        }
                                        @if (teamSprintInfo != null)
                                        {
                                            @if (teamSprintInfo.Status == "Active")
                                            {
                                                <div>
                                                    <span class="badge bg-success mb-1">Active Sprint</span>
                                                    <br />
                                                    <small class="text-muted">@teamSprintInfo.Goal</small>
                                                    <br />
                                                    <div class="progress mt-1" style="height: 4px;">
                                                        <div class="progress-bar bg-success" 
                                                             style="width: @teamSprintInfo.ProgressPercentage.ToString("F0")%"></div>
                                                    </div>
                                                    <small class="text-muted">@teamSprintInfo.ProgressPercentage.ToString("F0")% complete</small>
                                                </div>
                                            }
                                            else if (teamSprintInfo.Status == "Planned")
                                            {
                                                <div>
                                                    <span class="badge bg-warning text-dark mb-1">Planned Sprint</span>
                                                    <br />
                                                    <small class="text-muted">@teamSprintInfo.Goal</small>
                                                    <br />
                                                    <small class="text-muted">Starts: @teamSprintInfo.StartDate.ToString("MMM dd")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">@teamSprintInfo.Status</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No active sprint</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var currentSprintInfo = GetTeamSprintInfo(team.Id);
                                        }
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" @onclick="@(() => NavigateToDetails(team.Id))" @onclick:preventDefault="true" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            
                                            @if (currentSprintInfo?.Status == "Planned")
                                            {
                                                <button type="button" class="btn btn-outline-success" @onclick="@(() => StartSprint(team.Id, currentSprintInfo.Id))" @onclick:preventDefault="true" title="Start Sprint" disabled="@isStartingSprint">
                                                    @if (isStartingSprint)
                                                    {
                                                        <span class="spinner-border spinner-border-sm" role="status"></span>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-play"></i>
                                                    }
                                                </button>
                                            }
                                            else if (currentSprintInfo?.Status == "Active")
                                            {
                                                <button type="button" class="btn btn-outline-info" @onclick="@(() => NavigateToSprintBoard(team.Id, currentSprintInfo.Id))" @onclick:preventDefault="true" title="Sprint Board">
                                                    <i class="bi bi-kanban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-outline-success" @onclick="@(() => NavigateToCreateSprint(team.Id))" @onclick:preventDefault="true" title="Create Sprint">
                                                    <i class="bi bi-plus-circle"></i>
                                                </button>
                                            }
                                            
                                            <button type="button" class="btn btn-outline-secondary" @onclick="@(() => NavigateToEdit(team.Id))" @onclick:preventDefault="true" title="Edit Team">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-people display-1 text-muted"></i>
            </div>
            <h4>No teams found</h4>
            <p class="text-muted mb-4">Get started by creating your first Scrum team to manage your projects effectively.</p>
            <button type="button" class="btn btn-primary btn-lg" @onclick="NavigateToCreateTeam" @onclick:preventDefault="true">
                <i class="bi bi-plus-circle"></i> Create Your First Team
            </button>
        </div>
    }
</div>

<style>
    .progress {
        border-radius: 4px;
    }
</style>

@code {
    [Parameter] public EventCallback<Guid> OnTeamSelected { get; set; }

    private IEnumerable<TeamSummary>? teams;
    private Dictionary<Guid, SprintSummary?> teamSprints = new();
    private bool isLoading = true;
    private bool isStartingSprint = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTeams();
        await LoadTeamSprints();
    }

    private async Task LoadTeams()
    {
        try
        {
            isLoading = true;
            var response = await TeamService.GetTeamsAsync();
            teams = response.Teams;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load teams");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadTeamSprints()
    {
        if (teams == null) return;

        foreach (var team in teams)
        {
            try
            {
                var sprintsResponse = await SprintService.GetSprintsAsync(team.Id);
                var currentSprint = sprintsResponse?.Sprints?
                    .Where(s => s.Status == "Active" || s.Status == "Planned")
                    .OrderBy(s => s.Status == "Active" ? 0 : 1) // Active first, then Planned
                    .ThenByDescending(s => s.StartDate)
                    .FirstOrDefault();
                
                teamSprints[team.Id] = currentSprint;
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to load sprints for team {TeamId}", team.Id);
                teamSprints[team.Id] = null;
            }
        }
        StateHasChanged();
    }

    private SprintSummary? GetTeamSprintInfo(Guid teamId)
    {
        return teamSprints.TryGetValue(teamId, out var sprint) ? sprint : null;
    }

    private async Task StartSprint(Guid teamId, Guid sprintId)
    {
        try
        {
            isStartingSprint = true;
            var success = await SprintService.StartSprintAsync(teamId, sprintId);
            if (success)
            {
                NotificationService.ShowSuccess("Sprint started successfully!", "Success");
                await LoadTeamSprints(); // Refresh sprint data
            }
            else
            {
                NotificationService.ShowError("Failed to start sprint", "Error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to start sprint {SprintId} for team {TeamId}", sprintId, teamId);
            NotificationService.ShowError("Failed to start sprint", "Error");
        }
        finally
        {
            isStartingSprint = false;
        }
    }

    private void NavigateToCreateTeam()
    {
        Navigation.NavigateTo("/teams/create");
    }

    private void NavigateToDetails(Guid teamId)
    {
        Navigation.NavigateTo($"/teams/{teamId}");
    }

    private void NavigateToEdit(Guid teamId)
    {
        Navigation.NavigateTo($"/teams/{teamId}/edit");
    }

    private void NavigateToCreateSprint(Guid teamId)
    {
        Navigation.NavigateTo($"/teams/{teamId}/sprints/create");
    }

    private void NavigateToSprintBoard(Guid teamId, Guid sprintId)
    {
        Navigation.NavigateTo($"/teams/{teamId}/sprints/{sprintId}/board");
    }

    private string GetVelocityColor(decimal velocity)
    {
        return velocity switch
        {
            >= 8.0m => "success",
            >= 5.0m => "info",
            >= 2.0m => "warning",
            _ => "danger"
        };
    }
}