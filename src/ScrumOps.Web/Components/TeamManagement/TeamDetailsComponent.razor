@page "/teams/{TeamId:guid}"
@using ScrumOps.Shared.Contracts.Teams
@using ScrumOps.Shared.Contracts.Sprints
@using ScrumOps.Web.Services
@using ScrumOps.Web.Components.TeamManagement
@inject ITeamService TeamService
@inject ISprintService SprintService
@inject INotificationService NotificationService
@inject NavigationManager Navigation
@inject ILogger<TeamDetailsComponent> Logger
@rendermode InteractiveServer

<div class="container-fluid">
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (team != null)
    {
        <div class="row mb-3">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/teams">Teams</a></li>
                        <li class="breadcrumb-item active">@team.Name</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1>@team.Name</h1>
                        <p class="text-muted">@team.Description</p>
                    </div>
                    <div>
                        <span class="badge @(team.IsActive ? "bg-success" : "bg-secondary") fs-6">
                            @(team.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Sprint Length</h5>
                        <h2 class="text-primary">@team.SprintLengthWeeks</h2>
                        <small class="text-muted">weeks</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Team Velocity</h5>
                        <h2 class="text-success">@team.Velocity.ToString("F1")</h2>
                        <small class="text-muted">story points</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Team Size</h5>
                        <h2 class="text-info">@team.Members.Count()</h2>
                        <small class="text-muted">members</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Created</h5>
                        <h6 class="text-warning">@team.CreatedDate.ToString("MMM dd, yyyy")</h6>
                        <small class="text-muted">@((DateTime.UtcNow - team.CreatedDate).Days) days ago</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Team Members</h5>
                            <button type="button" class="btn btn-sm btn-success" @onclick="ShowAddMemberModal" @onclick:preventDefault="true">
                                <i class="bi bi-person-plus"></i> Add Member
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (team.Members.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var member in team.Members)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle me-2">
                                                            @member.Name.Substring(0, 1).ToUpper()
                                                        </div>
                                                        @member.Name
                                                    </div>
                                                </td>
                                                <td>@member.Email</td>
                                                <td>
                                                    <span class="badge bg-@GetRoleBadgeColor(member.Role)">
                                                        @FormatRole(member.Role)
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge @(member.IsActive ? "bg-success" : "bg-secondary")">
                                                        @(member.IsActive ? "Active" : "Inactive")
                                                    </span>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            @onclick="@(() => RemoveMember(member.Id))"
                                                            @onclick:preventDefault="true"
                                                            title="Remove Member">
                                                        <i class="bi bi-person-dash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-people display-4 text-muted"></i>
                                <p class="text-muted mt-2">No team members found.</p>
                                <button type="button" class="btn btn-success" @onclick="ShowAddMemberModal" @onclick:preventDefault="true">
                                    <i class="bi bi-person-plus"></i> Add First Member
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Current Sprint Status -->
                @if (teamSprints?.Any() == true)
                {
                    var activeSprint = teamSprints.FirstOrDefault(s => s.Status == "Active");
                    var plannedSprint = teamSprints.FirstOrDefault(s => s.Status == "Planned");
                    
                    @if (activeSprint != null)
                    {
                        <div class="card border-success mb-3">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-play-circle"></i> Active Sprint
                                </h5>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@activeSprint.Goal</h6>
                                <div class="row text-sm mb-2">
                                    <div class="col-6">
                                        <small class="text-muted">Progress:</small>
                                        <br />
                                        <strong>@activeSprint.CompletedStoryPoints/@activeSprint.CommittedStoryPoints pts</strong>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Days Left:</small>
                                        <br />
                                        <strong>@CalculateDaysRemaining(activeSprint)</strong>
                                    </div>
                                </div>
                                <div class="progress mb-2" style="height: 8px;">
                                    <div class="progress-bar bg-success" 
                                         role="progressbar" 
                                         style="width: @activeSprint.ProgressPercentage.ToString("F0")%">
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary btn-sm" @onclick="@(() => NavigateToSprintBoard(activeSprint.Id))">
                                        <i class="bi bi-kanban"></i> Sprint Board
                                    </button>
                                    <button class="btn btn-outline-warning btn-sm" @onclick="@(() => CompleteSprint(activeSprint.Id))">
                                        <i class="bi bi-check2-square"></i> Complete Sprint
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else if (plannedSprint != null)
                    {
                        <div class="card border-warning mb-3">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-check"></i> Planned Sprint
                                </h5>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@plannedSprint.Goal</h6>
                                <div class="row text-sm mb-2">
                                    <div class="col-6">
                                        <small class="text-muted">Start Date:</small>
                                        <br />
                                        <strong>@plannedSprint.StartDate.ToString("MMM dd")</strong>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Capacity:</small>
                                        <br />
                                        <strong>@plannedSprint.CommittedStoryPoints pts</strong>
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success" @onclick="@(() => StartSprint(plannedSprint.Id))" disabled="@isStartingSprint">
                                        @if (isStartingSprint)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        }
                                        <i class="bi bi-play"></i> Start Sprint
                                    </button>
                                    <button class="btn btn-outline-info btn-sm" @onclick="@(() => NavigateToSprintPlanning(plannedSprint.Id))">
                                        <i class="bi bi-list-task"></i> Sprint Planning
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card border-info mb-3">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-plus"></i> No Active Sprint
                                </h5>
                            </div>
                            <div class="card-body text-center">
                                <p class="text-muted">No active or planned sprints</p>
                                <button class="btn btn-primary" @onclick="NavigateToCreateSprint">
                                    <i class="bi bi-plus-circle"></i> Create Sprint
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card border-info mb-3">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar-plus"></i> Sprint Management
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            @if (isLoadingSprints)
                            {
                                <div class="spinner-border spinner-border-sm" role="status"></div>
                                <p class="text-muted mt-2">Loading sprints...</p>
                            }
                            else
                            {
                                <p class="text-muted">Start managing sprints for this team</p>
                                <button class="btn btn-primary" @onclick="NavigateToCreateSprint">
                                    <i class="bi bi-plus-circle"></i> Create First Sprint
                                </button>
                            }
                        </div>
                    </div>
                }

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-primary" @onclick="NavigateToEdit" @onclick:preventDefault="true">
                                <i class="bi bi-pencil"></i> Edit Team
                            </button>
                            <button type="button" class="btn btn-success" @onclick="ShowAddMemberModal" @onclick:preventDefault="true">
                                <i class="bi bi-person-plus"></i> Add Member
                            </button>
                            <button type="button" class="btn btn-info" @onclick="NavigateToSprints" @onclick:preventDefault="true">
                                <i class="bi bi-calendar-check"></i> View All Sprints
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="NavigateToBacklog" @onclick:preventDefault="true">
                                <i class="bi bi-list-check"></i> View Backlog
                            </button>
                            <button type="button" class="btn btn-outline-danger" @onclick="@(() => ConfirmDeleteTeam())" @onclick:preventDefault="true">
                                <i class="bi bi-trash"></i> Delete Team
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Metrics Section -->
        <div class="row mt-4">
            <div class="col-12">
                <ul class="nav nav-tabs" id="metricsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button type="button" class="nav-link @(activeMetricsTab == "velocity" ? "active" : "")" 
                                @onclick='@(() => SetActiveMetricsTab("velocity"))' 
                                @onclick:preventDefault="true">
                            <i class="bi bi-bar-chart"></i> Velocity
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button type="button" class="nav-link @(activeMetricsTab == "metrics" ? "active" : "")" 
                                @onclick='@(() => SetActiveMetricsTab("metrics"))' 
                                @onclick:preventDefault="true">
                            <i class="bi bi-speedometer2"></i> Metrics
                        </button>
                    </li>
                </ul>
                
                <div class="tab-content mt-3">
                    @if (activeMetricsTab == "velocity")
                    {
                        <TeamVelocityComponent TeamId="TeamId" />
                    }
                    else if (activeMetricsTab == "metrics")
                    {
                        <TeamMetricsComponent TeamId="TeamId" />
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4>Team not found</h4>
            <p class="text-muted">The requested team could not be found.</p>
            <button type="button" class="btn btn-primary" @onclick="NavigateToTeams" @onclick:preventDefault="true">
                <i class="bi bi-arrow-left"></i> Back to Teams
            </button>
        </div>
    }
</div>

@if (showAddMemberModal)
{
    <TeamMemberFormComponent TeamId="TeamId" 
                           OnMemberAdded="OnMemberAdded" 
                           OnCancel="HideAddMemberModal" />
}

<style>
    .avatar-circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 14px;
    }
</style>

@code {
    [Parameter] public Guid TeamId { get; set; }

    private TeamDetailsResponse? team;
    private IEnumerable<SprintSummary>? teamSprints;
    private bool isLoading = true;
    private bool isLoadingSprints = false;
    private bool isStartingSprint = false;
    private bool showAddMemberModal = false;
    private string activeMetricsTab = "velocity";

    protected override async Task OnInitializedAsync()
    {
        await LoadTeam();
        await LoadTeamSprints();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadTeam();
        await LoadTeamSprints();
    }

    private async Task LoadTeam()
    {
        try
        {
            isLoading = true;
            team = await TeamService.GetTeamAsync(TeamId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load team {TeamId}", TeamId);
            team = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadTeamSprints()
    {
        try
        {
            isLoadingSprints = true;
            var sprintsResponse = await SprintService.GetSprintsAsync(TeamId);
            teamSprints = sprintsResponse?.Sprints?.OrderByDescending(s => s.StartDate);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load sprints for team {TeamId}", TeamId);
            teamSprints = null;
        }
        finally
        {
            isLoadingSprints = false;
        }
    }

    private async Task StartSprint(Guid sprintId)
    {
        try
        {
            isStartingSprint = true;
            var success = await SprintService.StartSprintAsync(TeamId, sprintId);
            if (success)
            {
                NotificationService.ShowSuccess("Sprint started successfully!", "Success");
                await LoadTeamSprints(); // Refresh sprint data
            }
            else
            {
                NotificationService.ShowError("Failed to start sprint", "Error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to start sprint {SprintId} for team {TeamId}", sprintId, TeamId);
            NotificationService.ShowError("Failed to start sprint", "Error");
        }
        finally
        {
            isStartingSprint = false;
        }
    }

    private async Task CompleteSprint(Guid sprintId)
    {
        try
        {
            var success = await SprintService.CompleteSprintAsync(TeamId, sprintId);
            if (success)
            {
                NotificationService.ShowSuccess("Sprint completed successfully!", "Success");
                await LoadTeamSprints(); // Refresh sprint data
            }
            else
            {
                NotificationService.ShowError("Failed to complete sprint", "Error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to complete sprint {SprintId} for team {TeamId}", sprintId, TeamId);
            NotificationService.ShowError("Failed to complete sprint", "Error");
        }
    }

    private int CalculateDaysRemaining(SprintSummary sprint)
    {
        var remaining = (sprint.EndDate - DateTime.Today).Days;
        return Math.Max(0, remaining);
    }

    private void NavigateToEdit()
    {
        Navigation.NavigateTo($"/teams/{TeamId}/edit");
    }

    private void NavigateToTeams()
    {
        Navigation.NavigateTo("/teams");
    }

    private void NavigateToCreateSprint()
    {
        Navigation.NavigateTo($"/teams/{TeamId}/sprints/create");
    }

    private void NavigateToSprints()
    {
        Navigation.NavigateTo($"/teams/{TeamId}/sprints");
    }

    private void NavigateToBacklog()
    {
        Navigation.NavigateTo($"/teams/{TeamId}/backlog");
    }

    private void NavigateToSprintBoard(Guid sprintId)
    {
        Navigation.NavigateTo($"/teams/{TeamId}/sprints/{sprintId}/board");
    }

    private void NavigateToSprintPlanning(Guid sprintId)
    {
        Navigation.NavigateTo($"/teams/{TeamId}/sprints/{sprintId}/planning");
    }

    private string GetRoleBadgeColor(string role)
    {
        return role.ToLower() switch
        {
            "productowner" => "primary",
            "scrummaster" => "success",
            "developer" => "info",
            _ => "secondary"
        };
    }

    private string FormatRole(string role)
    {
        return role switch
        {
            "ProductOwner" => "Product Owner",
            "ScrumMaster" => "Scrum Master",
            "Developer" => "Developer",
            _ => role
        };
    }

    private void ShowAddMemberModal()
    {
        showAddMemberModal = true;
    }

    private void HideAddMemberModal()
    {
        showAddMemberModal = false;
    }

    private async Task OnMemberAdded()
    {
        showAddMemberModal = false;
        await LoadTeam(); // Refresh team data
    }

    private async Task RemoveMember(Guid memberId)
    {
        try
        {
            var success = await TeamService.RemoveTeamMemberAsync(TeamId, memberId);
            if (success)
            {
                await LoadTeam(); // Refresh team data
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to remove member {MemberId} from team {TeamId}", memberId, TeamId);
        }
    }

    private async Task ConfirmDeleteTeam()
    {
        // In a real app, show a confirmation dialog
        if (team != null)
        {
            try
            {
                var success = await TeamService.DeleteTeamAsync(TeamId);
                if (success)
                {
                    Navigation.NavigateTo("/teams");
                }
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Failed to delete team {TeamId}", TeamId);
            }
        }
    }

    private void SetActiveMetricsTab(string tab)
    {
        activeMetricsTab = tab;
    }
}